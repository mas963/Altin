@model Altin.Application.Models.News.GetNewsModel

@{
    ViewBag.Title = @Model.Title;
    Layout = "_Layout";
}

<!-- Single Page Header start -->
<div class="container-fluid page-header py-5">
    <h1 class="text-center text-white display-6">@Model.Title</h1>
</div>
<!-- Single Page Header End -->

<!-- News Start -->
<div class="container-fluid testimonial py-5">
    <div class="container py-5">
        <div class="row">
            <div class="col-md-6">
                <img class="img-thumbnail" src="~/img/News/@Model.ImageName"/>
            </div>
            <div class="col-md-6">
                <div class="mb-2">
                    <b>Yayınlama Tarihi: @Model.CreatedOn.ToString("dd/MM/yyyy - HH:mm")</b>
                </div>
                <hr>
                <p>@Model.Content</p>
            </div>
        </div>
    </div>
</div>
<!-- News End -->