    <!-- Libraries Stylesheet -->
    <link href="~/lib/lightbox/css/lightbox.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
    <link rel="icon" type="image/jpeg" href="~/img/UresinlerKirmizisi.jpg">
    <style>
        .spacing {
            margin-top: 100px; /* Bu değeri ihtiyacınıza göre artırabilir veya azaltabilirsiniz */
        }

        .btn-md-square {
            width: 50px; /* Butonun genişliği */
            height: 50px; /* Butonun yüksekliği */
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0; /* Buton içindeki fazladan boşluğu kaldırmak için */
        }

        .rounded-circle-img {
            border-radius: 50%; /* Resmi tam yuvarlak yapar */
            width: 100%; /* Resmin genişliğini butonun genişliği ile aynı yapar */
            height: 100%; /* Resmin yüksekliğini butonun yüksekliği ile aynı yapar */
            object-fit: cover; /* Resmin buton içine sığmasını sağlar ve kesilmeyi önler */
        }

        #uresinler {
            width: 60px; /* Resmin genişliği */
            height: 60px; /* Resmin yüksekliği */
            border-radius: 50%; /* Yuvarlak kenar */
            margin-right: 5px; /* Sağ kenar boşluğu */
        }
    </style>

</head>

<body>
<!-- Spinner Start -->
