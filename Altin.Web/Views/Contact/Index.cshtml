<!-- Contact Start -->
<div class="container-fluid contact py-5 mt-4">
    <div class="container py-5">
        <div class="p-5 bg-light rounded">
            <div class="row g-4">
                <div class="col-12">
                    <div class="text-center mx-auto" style="max-width: 700px;">
                        <h1 class="uresinler-color">İstek talep ve şikayetlerinizi iletişim formu üzerinden bize iletebilirsiniz</h1>
                        
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="h-100 rounded">
