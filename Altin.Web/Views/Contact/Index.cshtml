                        <div>
                            <h4>Mailimiz</h4>
                            <p class="mb-2">uresinlerkuyumculuk@gmail.com</p>
                        </div>
                    </div>
                    <div class="d-flex p-4 rounded bg-white">
                        <i class="fa fa-phone-alt fa-2x text-primary me-4 gonder"></i>
                        <div>
                            <h4>Telefon</h4>
                            <p class="mb-2">05056648733</p>
