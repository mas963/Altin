@model List<Altin.Application.Models.Product.GetProductModel>

@{
    Layout = "_AdminLayout";
    ViewBag.NavbarTitle = "Ürün Yönetimi";
}

<div class="panel-header panel-header-sm">
</div>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Ürünler</h5>
                </div>
                <div class="card-body">
                    <a href="/Admin/Product/Add">
                        <button type="button" class="btn btn-info">Yeni Ürün Ekle</button>
                    </a>
                    <div class="table-responsive">
                        <table class="table">
                            <thead class=" text-primary">
                            <tr>
                                <th>
                                    Ürün Görseli
                                </th>
                                <th>
                                    Ürün İsmi
                                </th>
                                <th>
                                    Ürün Açıklaması
                                </th>
                                <th class="text-right">
                                    İşlemler
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var product in Model)
                            {
                                <tr id="product-row-@product.Id">
                                    <td>
                                        @if (product.IsPopular)
                                        {
                                            <div class="imageItem">
                                                <span class="popularBadge">Popüler</span>
                                                <img class="img-thumbnail" width="100" src="~/img/Products/@product.ImageUrl"/>
                                            </div>
                                        }
                                        else
                                        {
                                            <img class="img-thumbnail" width="100" src="~/img/Products/@product.ImageUrl"/>
                                        }
                                    </td>
                                    <td>
                                        @product.Name
                                    </td>
                                    <td>
                                        @product.Description
                                    </td>
                                    <td class="text-right">
                                        <button type="button" rel="tooltip" class="btn btn-info btn-sm btn-icon">
                                            <i class="now-ui-icons users_single-02"></i>
                                        </button>
                                        <a href="/Admin/Product/Update/?id=@product.Id">
                                            <button type="button" rel="tooltip" class="btn btn-success btn-sm btn-icon">
                                                <i class="now-ui-icons ui-2_settings-90"></i>
                                            </button>
                                        </a>
                                        <button type="button" rel="tooltip" class="btn btn-danger btn-sm btn-icon" onclick="deleteProduct('@product.Id')">
                                            <i class="now-ui-icons ui-1_simple-remove"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        function deleteProduct(productId) {
            if (confirm('Bu ürünü silmek istediginizden emin misiniz?')) {
                $.ajax({
                    url: '/Admin/Product/Delete/?id=' + productId,
                    type: 'DELETE',
                    contentType: 'application/json',
                    success: function (response) {
                        if (response.success) {
                            $("#product-row-" + productId).remove();
                        } else {
                            alert('Ürün silinirken bir hata oluştu.');
                        }
                    },
                    error: function () {
                        alert('Ürün silinirken bir hata oluştu.');
                    }
                });
            }
        }
    </script>
}